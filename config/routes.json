{
  "": {
    "controller": "Default",
    "method": "start"
  },
  "write": {
    "controller": "Post",
    "method": "writePost"
  },
  "login": {
    "controller": "User",
    "method": "login"
  },
  "logout": {
    "controller": "User",
    "method": "logout"
  },
  "posts": {
    "controller": "Post",
    "method": "getAll"
  },
  "posts/:page": {
    "controller": "Post",
    "method": "getAllWithPage",
    "params": {
      "page": "number"
    }
  },
  "post": {
    "controller": "Post",
    "method": "getAll"
  },
  "post/:id": {
    "controller": "Post",
    "method": "get",
    "params": {
      "id": "number"
    }
  },
  "post/:id/edit": {
    "controller": "Post",
    "method": "edit",
    "params": {
      "id": "number"
    }
  },
  "user/:id": {
    "controller": "Post",
    "method": "getByUser",
    "params": {
      "id": "number"
    }
  },
  "user/post/create": {
    "controller": "Post",
    "method": "create"
  },
  "createPost": {
    "controller": "Post",
    "method": "createPost"
  },
  "editPost" : {
    "controller": "Post",
    "method": "editPost"
  },
  "deletePost": {
    "controller": "Post",
    "method": "deletePost"
  }
}
