{
  "": {
    "controller": "Default",
    "method": "start"
  },
  "write": {
  "controller": "Post",
  "method": "writePost"
  },
  "login": {
  	"controller": "Customer",
  	"method": "login"
  },
  "posts": {
    "controller": "Post",
    "method": "getAll"
  },
  "posts/": {
    "controller": "Post",
    "method": "getAll"
  },
  "posts/:page": {
    "controller": "Post",
    "method": "getAllWithPage",
    "params": {
      "page": "number"
    }
  },
  "post": {
    "controller": "Post",
    "method": "getAll"
  },
  "post/": {
    "controller": "Post",
    "method": "getAll"
  },
  "post/:id": {
    "controller": "Post",
    "method": "get",
    "params": {
      "id": "number"
    }
  },
  "edit/:id": {
    "controller": "Post",
    "method": "edit",
    "params": {
      "id": "number"
    }
  },
  "book/:id/borrow": {
    "controller": "Book",
    "method": "borrow",
      "login": true,
      "params": {
      "id": "number"
    }
  },
  "book/:id/return": {
    "controller": "Book",
    "method": "returnBook",
      "login": true,
      "params": {
      "id": "number"
    }
  },
  "books/search": {
    "controller": "Book",
    "method": "search"
  },
  "customers": {
    "controller": "Customer",
    "method": "getAll"
  },
  "customer/:id": {
    "controller": "Customer",
    "method": "get",
    "params": {
      "id": "number"}
  },
  "my-books": {
    "controller": "Book",
    "method": "getByUser",
    "login": true
  }
}
